<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.melodicmusic.mobileapp.view.StartPageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#6b6969">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/logo"
                android:paddingBottom="30dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:text="Ingresar a su cuenta"
                android:textSize="30dp"
                android:textColor="#a00d17"
                android:paddingBottom="30dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView3"
                android:text="Buscar productos por nombre y categoría\nRealizar compras\nVer historial de pedidos"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:paddingBottom="30dp"/>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:background="#FBA919"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/newAcountBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear una cuenta nueva"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/noLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingresar sin identificarse"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
